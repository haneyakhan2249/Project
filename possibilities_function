# 
# $s0 is the array of 9 nine letters
# $s1 is counter

.data:
       	characters: .space 9 # creating array to store characters
       	fin: .asciiz "C:\Users\haney\OneDrive\Documents\College\Fall 2016\CS3340\Lexathon\list.txt" # name of file to read from
       	buffer: .space 1024 # space in memory for list
       	print: .asciiz "Hello:"
 
       	
.text
       	la $s0, characters # storing it in register $s0
       	li $t1, 0 # temporary register $t0 to store counter 
 
randomletters:
       	li $a1, 26 # range of characters
       	li $v0, 42 # random character
       	syscall
       	addi $a0, $a0, 97 # starting at lower case a - lower case z
       	sb $a0, ($s0)
       
       	addi $s0, $s0, 1 # moving to next character 
       	addi $t1, $t1, 1 # incrementing counter 
       	blt $t1, 9 , randomletters # branching through to get 9 random characters
       	sb $zero, 0($s0)
       
       	la $a0, characters # printing the random characters
       	li $v0, 4
	syscall
       
       
possibilites:
	move $t1, $zero
	la $s5, buffer
	
	# open file
	li $v0, 13	
	la $a0, fin	# name of file
	li $a1, 0	# flags
	li $a2, 0	# mode
	syscall		
	move $s4, $v0	# save fd in $t0
	
	# read file
	li $v0, 14	
	move $a0, $s4	# save fd 
	la $a1, buffer	# stores read info into buffer
	li $a2, 1024	# hardcoded size of buffer
	syscall
	
	# close file 
    	li $v0, 16	
    	move $a0, $s4	
    	syscall	
